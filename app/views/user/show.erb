<h1><%= @user.username %></h1>
<% if current_user(session) == @user %>
  <a href="/users/<%= @user.id %>/edit"><button>Edit</button></a>
  <a href="/users/<%= @user.id %>/destroy"><button>Destroy</button></a>	      
<% end %>
<hr>
<% if @user.societies.empty? %>
  <p>You have no societies.</p>
<% else %>
  <% @user.societies.each do |society| %>
    <a href="/societies/<%= society.name + "_" + society.id.to_s %>"><%= society.name %></a><br><br>
  <% end %>
<% end %>
<a href="/societies/new"><button>Create a New Society</button></a>
