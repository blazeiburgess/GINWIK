<h1>Societies</h1>

<% Society.all.each do |society| %>
  <p>
    <a href="/societies/<%= society.name + "_" + society.id.to_s %>"><%= society.name %></a><br>
    <% if society.user == current_user(session) %>
      <small>by <a href="/users/<%= society.user.id %>"><%= society.user.username %></a> <span style="opacity: .6">(you)</span></small>
    <% else %>
      <small>by <a href="/users/<%= society.user.id %>"><%= society.user.username %></a></small>
    <% end %>
  </p>
<% end %>
